<div class="pf-c-select__menu{{#if select-menu--modifier}} {{select-menu--modifier}}{{/if}}"
  aria-labelledby="{{id}}-label"
  {{#unless select--IsExpanded}}hidden{{/unless}}
  {{#if select--attribute}}
    {{{select--attribute}}}
  {{/if}}>
  {{#> select-menu-search}}
    {{> select-menu-search-input}}
  {{/select-menu-search}}
  {{> divider}}
  {{#> select-menu-group}}
    {{#> select-menu-group-title}}
      Favorites
    {{/select-menu-group-title}}
    <ul>
      {{#> select-menu-wrapper select-menu-wrapper--IsFavorite="true"}}
        {{#> select-menu-item}}
          {{#> select-menu-item-main}}
            Item 1
          {{/select-menu-item-main}}
          {{#> select-menu-item-description}}
            This is a description.
          {{/select-menu-item-description}}
        {{/select-menu-item}}
        {{#> select-menu-item select-menu-item--IsAction="true" select-menu-item--attribute='aria-label="Starred"'}}
          {{> select-menu-item-favorite-icon}}
        {{/select-menu-item}}
      {{/select-menu-wrapper}}
      {{#> select-menu-wrapper select-menu-wrapper--IsFavorite="true"}}
        {{#> select-menu-item select-menu-item--modifier="pf-m-link"}}
          {{#> select-menu-item-main}}
            Item 4
          {{/select-menu-item-main}}
        {{/select-menu-item}}
        {{#> select-menu-item select-menu-item--IsAction="true" select-menu-item--attribute='aria-label="Starred"'}}
          {{> select-menu-item-favorite-icon}}
        {{/select-menu-item}}
      {{/select-menu-wrapper}}
    </ul>
  {{/select-menu-group}}
  {{> divider}}
  {{#> select-menu-group}}
    {{#> select-menu-group-title}}
      Group 1
    {{/select-menu-group-title}}
    <ul>
      {{#> select-menu-wrapper select-menu-wrapper--IsFavorite="true"}}
        {{#> select-menu-item select-menu-item--modifier="pf-m-link"}}
          {{#> select-menu-item-main}}
            Item 1
          {{/select-menu-item-main}}
        {{/select-menu-item}}
        {{#> select-menu-item select-menu-item--IsAction="true" select-menu-item--attribute='aria-label="Starred"'}}
          {{> select-menu-item-favorite-icon}}
        {{/select-menu-item}}
      {{/select-menu-wrapper}}
      {{#> select-menu-wrapper}}
        {{#> select-menu-item select-menu-item--modifier="pf-m-link" select-menu-item--IsSelected="true"}}
          {{#> select-menu-item-main}}
            Item 2
          {{/select-menu-item-main}}
        {{/select-menu-item}}
        {{#> select-menu-item select-menu-item--IsAction="true" select-menu-item--attribute='aria-label="Not starred"'}}
          {{> select-menu-item-favorite-icon}}
        {{/select-menu-item}}
      {{/select-menu-wrapper}}
      {{#> select-menu-wrapper select-menu-item--IsDisabled="true"}}
        {{#> select-menu-item select-menu-item--modifier="pf-m-link"}}
          {{#> select-menu-item-main}}
            Item 3 (disabled)
          {{/select-menu-item-main}}
        {{/select-menu-item}}
        {{#> select-menu-item select-menu-item--IsAction="true" select-menu-item--attribute='aria-label="Not starred"'}}
          {{> select-menu-item-favorite-icon}}
        {{/select-menu-item}}
      {{/select-menu-wrapper}}
    </ul>
  {{/select-menu-group}}
  {{> divider}}
  {{#> select-menu-group}}
    {{#> select-menu-group-title}}
      Group 2
    {{/select-menu-group-title}}
    <ul>
      {{#> select-menu-wrapper select-menu-wrapper--IsFavorite="true"}}
        {{#> select-menu-item select-menu-item--modifier="pf-m-link"}}
          {{#> select-menu-item-main}}
            Item 4
          {{/select-menu-item-main}}
        {{/select-menu-item}}
        {{#> select-menu-item select-menu-item--IsAction="true" select-menu-item--attribute='aria-label="Starred"'}}
          {{> select-menu-item-favorite-icon}}
        {{/select-menu-item}}
      {{/select-menu-wrapper}}
      {{#> select-menu-wrapper}}
        {{#> select-menu-item select-menu-item--modifier="pf-m-link"}}
          {{#> select-menu-item-main}}
            Item 5
          {{/select-menu-item-main}}
        {{/select-menu-item}}
        {{#> select-menu-item select-menu-item--IsAction="true" select-menu-item--attribute='aria-label="Not starred"'}}
          {{> select-menu-item-favorite-icon}}
        {{/select-menu-item}}
      {{/select-menu-wrapper}}
    </ul>
  {{/select-menu-group}}
</div>
